.container {
  display: flex;
  height: 100%;
  width: 100%;
  overflow-y: scroll;
}

.upper-module {
  position: absolute;
  height: 20%;
  width: 100%;
  top: 0;
}

.input-module, .button-module {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 33.3%;
}

.slider-module {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  width: 100%;
  height: 33.3%;
}

.input-box, .slider-bar {
  height: 90%;
  width: 80%;
}

.slider-label {
  position: relative;
  flex: 1;
  height: 100%;
  width: 10%;
  left: 20rpx;
  text-align: center;
  color: rgb(10, 102, 206);
}

.slider-value {
  position: relative;
  flex: 1;
  height: 100%;
  width: 10%;
  right: 40rpx;
  color: rgb(10, 102, 206);
}

.search-button {
  height: 90%;
  width: 50%;
  background-color: #0ef;
}

.lower-module {
  height: 80%;
  width: 100%;
  position: absolute;
  bottom: 0;
  /* 你可以设置背景颜色或者其他样式以区分这两个模块 */
}

.device-container {
  height: 100%;
  width: 100%;
}

.device-item {
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.device-item-top {
  height: 50%;
  width: 80%;
  background: #0ef;
  display: flex;
  justify-content: center;
  align-items: center;
}

.device-item-bottom {
  height: 50%;
  width: 80%;
  background: #0af;
  display: flex;
  justify-content: center;
  align-items: center;
}

.device-name-text {
  text-align: center;
}

.device-rssi-text {
  text-align: center;
}

.rounded-corners {
  border-radius: 10rpx;  /* 可根据你的需求调整数值 */
}

.rounded-corners-top {
  border-top-left-radius: 10rpx;  /* 可根据你的需求调整数值 */
}

.rounded-corners-bottom {
  border-bottom-right-radius: 10rpx;  /* 可根据你的需求调整数值 */
}
